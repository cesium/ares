---
import CompatibilityList from "~/components/compatibilityList.astro";
import ContentSection from "~/components/contentSection.astro";
import type { CompatibilityItem } from "~/types";
import companies from "~/data/companies.json";
---

<ContentSection title="Sponsors" id="companies">
  <Fragment slot="lead">
    Take a look at the sponsors and supporters who made this event possible.
  </Fragment>
  <br />
  <CompatibilityList items={companies.sponsors} title="Sponsor" />
  <CompatibilityList items={companies.supporters} title="Supporters" />
</ContentSection>
